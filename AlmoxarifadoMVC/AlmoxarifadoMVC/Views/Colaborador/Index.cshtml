@model IEnumerable<AlmoxarifadoMVC.Models.Colaborador>


@{
    ViewBag.Title = "Index";
}

<h2>Colaboradores</h2>

<table class="table table-dark">
    <thead>
        <tr>

            <th scope="col">Codigo</th>
            <th scope="col">Nome</th>
            <th scope="col">Cargo</th>
            <th scope="col">Área</th>
            <th scope="col">Opções</th>
        </tr>



    </thead>

    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <th scope="row">@item.ColID</th>
                <td>@item.ColNome</td>
                <td>@item.ColCargo</td>
                <td>@item.Area.AreaDescricao</td>
                

              


                <td>

                    <a href="/colaborador/edit?id=@item.ColID"><button type="button" class="btn btn-warning">Editar</button></a>
                    <a href="/colaborador/exibir?id=@item.ColID"><button type="button" class="btn btn-primary">Exibir</button></a>
                    <a href="/colaborador/deletar?id=@item.ColID"><button type="button" class="btn btn-danger">Deletar</button></a>

                </td>
            </tr>
        }




    </tbody>

   







</table>

<p><a href="/colaborador/criar" class="btn btn-primary">Criar</a></p>

<p><a href="/home/projetos" class="btn btn-primary">Voltar &raquo;</a></p>