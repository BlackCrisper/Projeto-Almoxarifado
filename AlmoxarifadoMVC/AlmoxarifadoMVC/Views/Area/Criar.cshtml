@model IEnumerable<AlmoxarifadoMVC.Models.Area>

@{
    ViewBag.Title = "Criar";
}

<h2>Cadastro de Área</h2>

<div>


    <form action="/Area/Criar" method="post">
        <div>
            <class ="form-group">
                <label for="descricao">Descrição</label>
                <input type="text"
                       maxlength="100" id="descricao" name="descricao"
                       required />

        </div>

        <div>
            <button type="submit" class="btn btn-success">Salvar</button>
            <a href="/Area/index" class="btn btn-primary">Voltar</a>

        </div>
    </form>

</div>



