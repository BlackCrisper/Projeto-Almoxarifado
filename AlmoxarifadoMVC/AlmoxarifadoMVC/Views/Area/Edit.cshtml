@model AlmoxarifadoMVC.Models.Area

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>


<div>

    <form action="/area/Edit?id=@Model.AreaID" method="post">
        <div>
            <class ="form-group">
                <label for="descricao">Descrição</label>
                 <input type="text" class="form-control"
                      maxlength="100" id="descricao" name="descricao"
                       value="@Model.AreaDescricao"
                      required />
         </div>
        
        <div>
            <button class="btn btn-success" type="submit">Salvar</button>
            <a href="/area/index" class="btn btn-primary">Voltar</a>

        </div>
            



    </form>




</div>


