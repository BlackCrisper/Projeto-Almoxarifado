@model IEnumerable<AlmoxarifadoMVC.Models.Produto>


@{
    ViewBag.Title = "Index";
}



<div>

    <h2>Reginaldo me de uma coca-cola, PFVR</h2>


    <a href="https://www.extra.com.br/coca-cola-pet-2l-1523379661/p/1523379661?utm_medium=cpc&utm_source=google_freelisting&IdSku=1523379661&idLojista=12231&tipoLojista=3P">
        <button type="button" class="btn btn-success">Comprar</button>


    </a>

</div>

<div>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Descrição</th>
                <th scope="col">Máximo</th>
                <th scope="col">Mínimo</th>
                <th scope="col">Em estoque</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <th scope="row">@item.ProID</th>
                    <td>@item.ProDescricao</td>
                    <td>@item.ProMaximo</td>
                    <td>@item.ProMinimo</td>
                    <td>@item.ProEstoque</td>

                    @if (item.ProEstoque < item.ProMinimo)
                     {
                        <td style="background-color:darkred;
                                              color:white;">
                            @item.ProEstoque

                        </td>

                    }
                    else
                    {
                        <td>@item.ProEstoque</td>
                    }


                    <td>

                        <a href="/produto/edit?id=@item.ProID"><button type="button" class="btn btn-warning">Editar</button></a>
                        <a href="/produto/exibir?id=@item.ProID"><button type="button" class="btn btn-primary">Exibir</button></a>
                        <a href="/produto/deletar?id=@item.ProID"><button type="button" class="btn btn-danger">Deletar</button></a>

                    </td>
                </tr>
            }




        </tbody>
    </table>


</div>




    <p><a class="btn btn-info" href="http://localhost:56249/Produto/Criar">Criar novo Produto &raquo;</a></p>



