@model AlmoxarifadoMVC.Models.Produto

@{
    ViewBag.Title = "Deletar";
}

<h2>Deletando</h2>

<div>
    <form action="/Produto/ConfirmeDelete?id=@Model.ProID" method="post">
        <div>
            <class ="form-group">
                <label>Descrição</label>
                <label>@Model.ProDescricao</label>
        </div>
        <div>
            <class ="form-group">
                <label>Mínimo</label>
                <label>@Model.ProMinimo</label>
        </div>
        <div>
            <class ="form-group">
                <label>Máximo</label>
                <label>@Model.ProMaximo</label>
        </div>
        <div>
            <class ="form-group">
                <label>Estoque</label>
                <label>@Model.ProEstoque</label>
        </div>


        <div>


        </div>

        <div>
            <p><a href="/produto/index" class="btn btn-primary">Voltar &raquo;</a></p>
            <button type="submit" class="btn btn-danger">Deletar</button>
        </div>



    </form>
</div>







